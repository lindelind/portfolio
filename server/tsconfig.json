{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
}
